<html lang="en">
  <%- include("./layout/header") -%>
  <body>
    <%- include("./layout/navbar") -%>
    <main class="flex flex-col items-center mx-60">
      <h1 class="flex text-4xl font-medium font-serif py-4">Sign up</h1>
      <div class="flex flex-col w-full">
        <form action="/signup" method="post">
          <div class="grid grid-cols-2 gap-4 my-4">
            <label class="text-2xl font-normal justify-self-end" for="email">Email</label>
            <input class="justify-self-start leading-9 border-2 rounded border-slate-300 hover:border-slate-400 w-8/12" type="email" name="email" placeholder="Enter email here..." required/>
          </div>
          <div class="grid grid-cols-2 gap-4 my-4">
            <label class="text-2xl font-normal justify-self-end" for="password">password</label>
            <input class="justify-self-start leading-9 border-2 rounded border-slate-300 hover:border-slate-400 w-8/12" type="password" name="password" placeholder="Enter password here..." required/>
          </div>
          <div class="grid grid-cols-2 gap-4 my-4">
            <button class="justify-self-end bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" type="submit">Sign up</button>
            <button class="justify-self-start bg-transparent hover:bg-gray-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-500 hover:border-transparent rounded" type="reset">Reset</button>
          </div>
        </form>
      </div>
    </main>
    <%- include("./layout/footer") -%>
  </body>
</html>